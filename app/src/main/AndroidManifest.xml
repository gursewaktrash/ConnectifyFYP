<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.connectifyhk.connectify_fyp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectifyFYP">
        <activity android:name="org.connectifyhk.connectify_fyp.ShowProfile"
            android:label="User Profile"/>
        <activity android:name="org.connectifyhk.connectify_fyp.ForgotPassword" />
        <activity
            android:name="org.connectifyhk.connectify_fyp.ChatActivity"
            android:theme="@style/AppThemeNo" />
        <activity
            android:name="org.connectifyhk.connectify_fyp.LoginActivity"
            android:label="Login" />
        <activity
            android:name="org.connectifyhk.connectify_fyp.DashboardActivity"
            android:label="Home" />
        <activity
            android:name="org.connectifyhk.connectify_fyp.SignUpActivity"
            android:label="Sign Up" />
        <activity android:name="org.connectifyhk.connectify_fyp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="org.connectifyhk.connectify_fyp.notifications.FirebaseService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_SERVICE" />
            </intent-filter>
        </service>
        <service
            android:name="org.connectifyhk.connectify_fyp.notifications.FirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>